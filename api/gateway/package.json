{
  "name": "supplex-api",
  "description": "Central Supplex API service",
  "main": "index.js",
  "author": "Supplex",
  "private": true,
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "postinstall": "npm -s run generate",
    "dev": "NODE_ENV=development ts-node-dev -r dotenv/config --no-notify --respawn --transpile-only src",
    "start": "npm run db:deploy && node dist/src",
    "build": "npm -s run clean && npm -s run generate && tsc && npm run copy-files",
    "clean": "rimraf dist",
    "copy-files": "copyfiles src/**/*.html dist",
    "generate": "npm -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "schema": "npx rover supergraph compose --config ./supergraph-config.yaml > schema.graphql",
    "schema:models": "graphql-codegen --config src/dataSources/models/codegen.yml",
    "schema:agents": "graphql-codegen --config src/dataSources/agents/codegen.yml",
    "pretest": "dotenv -e .env.test -- npm -s run db:reset",
    "test": "dotenv -e .env.test -- jest --runInBand --no-cache --detectOpenHandles --forceExit",
    "db:seed": "npx prisma db seed",
    "db:deploy": "dotenv -- prisma migrate deploy",
    "db:reset": "dotenv -- prisma migrate reset --force"
  },
  "dependencies": {
    "@apollo/gateway": "^0.45.0",
    "@devoxa/prisma-relay-cursor-connection": "^2.2.2",
    "@prisma/client": "3.15.2",
    "@profusion/apollo-federation-upload": "3.0.0",
    "@sentry/node": "^6.19.3",
    "@sentry/tracing": "^6.19.3",
    "adm-zip": "^0.5.9",
    "apollo-datasource-rest": "3.5.2",
    "apollo-graphql": "^0.9.5",
    "apollo-server-core": "^3.6.5",
    "apollo-server-express": "^3.6.5",
    "aws-sdk": "^2.741.0",
    "axios": "^0.21.4",
    "bcryptjs": "^2.4.3",
    "bytes": "^3.1.1",
    "change-case": "^4.1.2",
    "class-validator": "^0.13.2",
    "console-stamp": "^3.0.3",
    "cookie-parser": "^1.4.6",
    "cron": "^1.8.2",
    "cuid": "^2.1.8",
    "date-fns": "^2.24.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.3",
    "graphql": "^15.6.0",
    "graphql-fields": "^2.0.3",
    "graphql-middleware": "^6.1.13",
    "graphql-relay": "^0.10.0",
    "graphql-scalars": "^1.14.1",
    "graphql-shield": "^7.5.0",
    "graphql-upload": "^13.0.0",
    "http-proxy-middleware": "^2.0.4",
    "ical-generator": "^3.1.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "ldap-escape": "^2.0.5",
    "ldapjs": "^2.3.1",
    "mustache": "^4.2.0",
    "nanoid": "^3.1.30",
    "nodemailer": "^6.7.0",
    "openapi2apigee": "^0.9.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.1.6",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@apollo/rover": "^0.8.1",
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@graphql-codegen/cli": "^2.11.7",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@types/adm-zip": "^0.4.34",
    "@types/bcryptjs": "^2.4.2",
    "@types/bytes": "^3.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.3",
    "@types/graphql": "^14.5.0",
    "@types/graphql-upload": "^8.0.8",
    "@types/jest": "^27.0.1",
    "@types/jsonfile": "^6.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/ldapjs": "^2.2.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^15.12.2",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^4.0.0",
    "jest": "^27.1.0",
    "jest-junit": "^13.0.0",
    "pg-connection-string": "^2.5.0",
    "prisma": "3.15.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typegraphql-prisma": "0.20.4",
    "typescript": "4.6.2"
  },
  "resolutions": {
    "fs-capacitor": "^6.2.0"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "build/reports",
    "outputName": "junit.xml"
  },
  "engines": {
    "node": ">=14.18.0",
    "npm": "~6.14.10"
  }
}
